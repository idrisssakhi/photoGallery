{
  "name": "react-native-photo-gallery-api",
  "version": "1.0.2",
  "description": "React native API to extract media files (images and videos)",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "files": [
    "lib/",
    "src/"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "lint-ci": "yarn lint -f ./node_modules/@firmnav/eslint-github-actions-formatter/dist/formatter.js",
    "build": "bob build",
    "check-js": "yarn lint --fix && yarn typescript"
  },
  "keywords": [
    "react-native",
    "react native",
    "cameraroll",
    "camera",
    "photo gallery",
    "photo api",
    "photo"
  ],
  "author": "Idris Sakhi <idrisssakhi@gmail.com> (https://github.com/idrisssakhi)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/idrisssakhi/photoGallery.git"
  },
  "bugs": {
    "url": "https://github.com/idrisssakhi/photoGallery/issues"
  },
  "homepage": "https://github.com/idrisssakhi/photoGallery",
  "publishConfig": {
    "@idrisssakhi:registry": "https://npm.pkg.github.com"
  },
  "devDependencies": {
    "react-native-builder-bob": "0.18.2",
    "react-native": "^0.66.0",
    "react": "^17.0.2",
    "@babel/core": "7.12.9",
    "@babel/runtime": "7.12.5",
    "@react-native-community/eslint-config": "2.0.0",
    "@types/jest": "26.0.23",
    "@types/react-test-renderer": "17.0.1",
    "@types/react-native": "0.67.3",
    "@typescript-eslint/eslint-plugin": "5.17.0",
    "babel-jest": "26.6.3",
    "@typescript-eslint/parser": "5.17.0",
    "eslint": "7.32.0",
    "jest": "26.6.3",
    "metro-react-native-babel-preset": "0.67.0",
    "react-test-renderer": "17.0.2",
    "typescript": "4.4.4"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.json"
        }
      ]
    ]
  },
  "prettier": {
    "bracketSpacing": true,
    "bracketSameLine": true,
    "singleQuote": true,
    "trailingComma": "all",
    "semi": true,
    "tabWidth": 2,
    "useTabs": false,
    "printWidth": 140
  },
  "babel": {
    "presets": [
      "module:metro-react-native-babel-preset"
    ]
  }
}
